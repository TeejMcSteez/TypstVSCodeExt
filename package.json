{
  "name": "typstlangsupport",
  "displayName": "TypstLangSupport",
  "description": "Syntax highlighting, auto preview, Linting",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "typst-preview.compileAndShow",
        "title": "Compile Typst to PDF and Preview"
      }
    ],
    "languages": [
      {
        "id": "typst",
        "extensions": [".typ"],
        "aliases": ["Typst"],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/favicon-16x16.png",
          "dark": "./icons/favicon-16x16.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "typst",
        "scopeName": "source.typst",
        "path": "./syntaxes/typst.tmLanguage.json"
      }
    ],
    "keybindings": [
    {
      "command": "typst-preview.compileAndShow",
      "key": "ctrl+shift+v",
      "when": "editorLangId == typst"
    }
  ],
    "configuration": {
      "title": "Typst",
      "properties": {
        "typst.outputFormat": {
          "type": "string",
          "enum": ["pdf", "png", "svg", "html"],
          "default": "pdf",
          "description": "Output format for Typst compilation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TeejMcSteez/TypstVSCodeExt"
  },
  "author": {
    "name": "TeejMcSteez",
    "email": "teejmcsteez@gmail.com"
  },
  "license": "MIT"
}
